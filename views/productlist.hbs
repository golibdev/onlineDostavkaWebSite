<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
        />
        <title>Megabazaar</title>
        <!-- plugins:css -->
        <link
            rel="stylesheet"
            href="/css/vendor/feather/feather.css"
        />
        <link
            rel="stylesheet"
            href="/css/vendor/ti-icons/themify-icons.css"
        />
        <link
            rel="stylesheet"
            href="/css/vendor/vendor.bundle.base.css"
        />
        <!-- endinject -->
        <!-- Plugin css for this page -->
        <link
            rel="stylesheet"
            href="/css/vendor/datatables/datatables.css"
        />
        <link
            rel="stylesheet"
            type="text/css"
            href="/css/js/select.dataTables.min.css"
        />
        <!-- End plugin css for this page -->
        <!-- inject:css -->
        <link
            rel="stylesheet"
            href="/css/vertical-layout-light/style.css"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
            integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer"
        />
    </head>
    <body>

        <div class="container-scroller">
            <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
                <div
                    class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center"
                >
                    <a class="navbar-brand brand-logo mr-5" href="/dashboard/">
                        <img src="/images/logo.webp" alt="logo" />
                    </a>
                </div>
                <div
                    class="navbar-menu-wrapper d-flex align-items-center justify-content-end"
                >
                    <button
                        class="navbar-toggler navbar-toggler align-self-center"
                        type="button"
                        data-toggle="minimize"
                    >
                        <i class="fas fa-bars"></i>
                    </button>
                    <ul class="navbar-nav navbar-nav-right">
                        <li class="nav-item nav-profile dropdown">
                            <a
                                class="nav-link dropdown-toggle"
                                data-toggle="dropdown"
                                id="profileDropdown"
                            >
                                <img
                                    src="https://4kings.uz/static/dashboard/images/faces/face28.jpg"
                                    alt="profile"
                                />
                            </a>
                            <div
                                class="dropdown-menu dropdown-menu-right navbar-dropdown"
                                aria-labelledby="profileDropdown"
                            >
                                <a class="dropdown-item" href="/logout/">
                                    <i
                                        class="fas fa-sign-out-alt text-primary"
                                    ></i>
                                    Chiqish
                                </a>
                            </div>
                        </li>
                    </ul>
                    <button
                        class="navbar-toggler navbar-toggler-right d-lg-none align-self-center"
                        type="button"
                        data-toggle="offcanvas"
                    >
                        <span class="fas fa-bars"></span>
                    </button>
                </div>
            </nav>
            <div class="container-fluid page-body-wrapper">
                <nav class="sidebar sidebar-offcanvas" id="sidebar">
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/dashboard/">
                                <i class="fas fa-bars"></i>
                                <span class="menu-title ml-3">Bosh sahifa</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/dashboard/product">
                                <i class="fas fa-plus"></i>
                                <span class="menu-title ml-3">Maxsulot qo`shish</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/dashboard/list">
                                <i class="fas fa-th"></i>
                                <span class="menu-title ml-3">Mahsulotlar</span>
                            </a>
                        </li>

                    </ul>
                </nav>
                <div class="main-panel">
                    <div class="content-wrapper">
                        <div class="row">
                            <div class="col-md-12 grid-margin stretch-card">
                                <div class="card">
                                    <div class="card-body">
                                        <p class="card-title">Mavjud mahsulotlar</p>
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="table-responsive">
                                                    <table
                                                        id="productsTable"
                                                        class="display expandable-table table-hover"
                                                        style="width:100%"
                                                    >
                                                        <thead>
                                                            <tr>
                                                                <th>Nomi</th>
                                                                <th>Narxi</th>
                                                                <th
                                                                >Mavjudligi</th>
                                                                <th
                                                                >Valyutasi</th>
                                                                <th>O`chirish</th>
                                                            </tr>
                                                        </thead>
                                                        {{#each results}}
                                                            <tbody>
                                                                <tr>
                                                                    <td
                                                                    >{{title}}</td>
                                                                    <td
                                                                    >{{price}} so`m</td>
                                                                    <td>
                                                                        <button
                                                                            class="btn btn-outline-success"
                                                                        >
                                                                            Mavjud
                                                                        </button>
                                                                    </td>
                                                                    <td>
                                                                        UZS
                                                                    </td>
                                                                    <td>
                                                                        <form action="/products/delete/{{id}}"
                                                                            method="POST">
                                                                            <button class="btn btn-danger">
                                                                                <i class="fas fa-trash-alt"></i>
                                                                            </button>
                                                                        </form>
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        {{/each}}
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <footer class="footer">
                        <div
                            class="d-sm-flex justify-content-center justify-content-sm-between"
                        >
                            <img src="/images/logo.webp" alt="logo" />
                        </div>
                    </footer>
                </div>
            </div>
        </div>

        <!-- plugins:js -->
        <script
            src="https://4kings.uz/static/dashboard/vendors/js/vendor.bundle.base.js"
        ></script>
        <!-- endinject -->
        <!-- Plugin js for this page -->
        <script
            src="https://4kings.uz/static/dashboard/vendors/chart.js/Chart.min.js"
        ></script>
        <script
            src="/static/dashboard/vendors/datatables.net/jquery.dataTables.js"
        ></script>
        <script
            src="https://4kings.uz/static/dashboard/vendors/datatables.net-bs4/dataTables.bootstrap4.js"
        ></script>
        <script
            src="https://4kings.uz/static/dashboard/js/dataTables.select.min.js"
        ></script>

        <!-- End plugin js for this page -->
        <!-- inject:js -->
        <script
            src="https://4kings.uz/static/dashboard/js/off-canvas.js"
        ></script>
        <script
            src="https://4kings.uz/static/dashboard/js/hoverable-collapse.js"
        ></script>
        <script
            src="https://4kings.uz/static/dashboard/js/template.js"
        ></script>
        <script
            src="https://4kings.uz/static/dashboard/js/settings.js"
        ></script>
        <script
            src="https://4kings.uz/static/dashboard/js/todolist.js"
        ></script>
        <!-- endinject -->
        <!-- Custom js for this page-->
        <script src="{% static 'dashboard/js/dashboard.js"></script>
        <script
            src="https://4kings.uz/static/dashboard/js/Chart.roundedBarCharts.js"
        ></script>
        <!-- End custom js for this page-->
    </body>
</html>