<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Megabazaar</title>
  <!-- plugins:css -->
<link
        rel="stylesheet"
        href="/css/vendor/feather/feather.css"
    />
    <link
        rel="stylesheet"
        href="/css/vendor/ti-icons/themify-icons.css"
    />
    <link
        rel="stylesheet"
        href="/css/vendor/vendor.bundle.base.css"
    />
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link
        rel="stylesheet"
        href="/css/vendor/datatables/datatables.css"
    />
    <link
        rel="stylesheet"
        type="text/css"
        href="/css/js/select.dataTables.min.css"
    />
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link
        rel="stylesheet"
        href="/css/vertical-layout-light/style.css"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="container-scroller">
    <!-- partial:partials/_navbar.html -->
        <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo mr-5" href="/dashboard/">
                    <img src="/images/logo.webp" alt="logo">
                </a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <i class="fas fa-bars"></i>
                </button>
                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item nav-profile dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" id="profileDropdown">
                            <img src="https://4kings.uz/static/dashboard/images/faces/face28.jpg" alt="profile">
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
                            <a class="dropdown-item" href="/logout/">
                                <i class="fas fa-sign-out-alt text-primary"></i>
                                Chiqish
                            </a>
                        </div>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="fas fa-bars"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard/">
                            <i class="fas fa-bars"></i>
                            <span class="menu-title ml-3">Bosh sahifa</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard/product">
                            <i class="fas fa-plus"></i>
                            <span class="menu-title ml-3">Maxsulot qo`shish</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard/list">
                            <i class="fas fa-th"></i>
                            <span class="menu-title ml-3">Mahsulotlar</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        <div class="col-md-6 mb-4 stretch-card transparent">
                        <div class="card card-tale">
                            <div class="card-body">
                            <p class="mb-4">Bugungi buyurtmalar</p>
                            <p class="fs-30 mb-2">0</p>
                            <p>{{day}}.{{month}}.{{year}}</p>
                            </div>
                        </div>
                        </div>
                        <div class="col-md-6 mb-4 stretch-card transparent">
                        <div class="card card-dark-blue">
                            <div class="card-body">
                            <p class="mb-4">Umumiy buyurtmalar</p>
                            {{#if len}}
                            <p class="fs-30 mb-2">{{len}} ta</p>
                            {{else}}
                            <p class="fs-30 mb-2">0 ta</p>
                            {{/if}}
                            </div>
                        </div>
                        </div>
                        <div class="col-md-6 mb-4 mb-lg-0 stretch-card transparent">
                        <div class="card card-light-blue">
                            <div class="card-body">
                            <p class="mb-4">Yetkazib berilgan buyurtmalar</p>
                            <p class="fs-30 mb-2">0</p>
                            <p>2.00% (30 days)</p>
                            </div>
                        </div>
                        </div>
                        <div class="col-md-6 stretch-card transparent">
                        <div class="card card-light-danger">
                            <div class="card-body">
                            <p class="mb-4">Bekor qilingan buyurtmalar</p>
                            <p class="fs-30 mb-2">0</p>
                            <p>0.22% (30 days)</p>
                            </div>
                        </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-title">Buyurtmalar</p>
                                    <div class="row">
                                        <div class="col-12">
                                            {{#if results}}
                                            <div class="table-responsive">
                                                <table id="example" class="display expandable-table table-hover" style="width:100%">
                                                <thead>
                                                    <tr>
                                                    <th>Mijoz</th>
                                                    <th>Viloyat</th>
                                                    <th>Shahar/tuman</th>
                                                    <th>Yashash manzili</th>
                                                    <th>Pochta Indeksi</th>
                                                    <th>Telefon raqam</th>
                                                    <th>O`chirish</th>
                                                    </tr>
                                                </thead>
                                                {{#each results}}
                                                <tbody>
                                                    <td>{{name}}</td>
                                                    <td>{{region}}</td>
                                                    <td>{{city}}</td>
                                                    <td>{{adress}}</td>
                                                    <td>{{pochtalcode}}</td>
                                                    <td>{{tel}}</td>
                                                    <td>
                                                        <form action="/order/deleted/{{id}}"
                                                            method="POST">
                                                            <button class="btn btn-danger">
                                                                <i class="fas fa-trash-alt"></i>
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tbody>
                                                {{/each}}
                                                </table>
                                            </div>
                                            {{else}}
                                            <h1 class="alert alert-success">Bizda buyurtmalar mavjud emas</h1>
                                            {{/if}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <!-- content-wrapper ends -->
            <!-- partial:partials/_footer.html -->
                <footer class="footer">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">
                            <img src="/images/logo.webp" alt="logo">
                        </span>
                    </div>
                </footer>
        <!-- partial -->
            </div>
        <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>

    <!-- plugins:js -->
    <script src="https://4kings.uz/static/dashboard/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="https://4kings.uz/static/dashboard/vendors/chart.js/Chart.min.js"></script>
    <script src="/static/dashboard/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="https://4kings.uz/static/dashboard/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <script src="https://4kings.uz/static/dashboard/js/dataTables.select.min.js"></script>

    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="https://4kings.uz/static/dashboard/js/off-canvas.js"></script>
    <script src="https://4kings.uz/static/dashboard/js/hoverable-collapse.js"></script>
    <script src="https://4kings.uz/static/dashboard/js/template.js"></script>
    <script src="https://4kings.uz/static/dashboard/js/settings.js"></script>
    <script src="https://4kings.uz/static/dashboard/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="{% static 'dashboard/js/dashboard.js"></script>
    <script src="https://4kings.uz/static/dashboard/js/Chart.roundedBarCharts.js"></script>
    <!-- End custom js for this page-->
</body>
</html>